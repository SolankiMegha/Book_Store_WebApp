@model IEnumerable<Book_Store_WebApp.Models.Author>

@{
    ViewBag.Title = "Index";
}
<html>
<head>
    <link rel="stylesheet" href="~/Style.css" />
</head>
<body>
    <h2 class="text-center">Author's List</h2>
    
    @using (Html.BeginForm())
            {
                <p>
                    Find by Name : @Html.TextBox("search")
                    <input type="submit" value="Search" class="btn btn-outline-primary" /> </p>
            }
    <table class="table table-bordered table-hover text-center">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>Actions</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    <span class="btn btn-outline-info">
                        @Html.ActionLink("Edit", "Edit", new { id = item.id }, new { style = "text-decoration: none;color:black;" })
                    </span>
                    <span class="btn btn-outline-warning ">
                        @Html.ActionLink("Details", "Details", new { id = item.id }, new { style = "text-decoration: none;color:black;" })
                    </span>
                    <span class="btn btn-outline-danger">
                        @Html.ActionLink("Delete", "Delete", new { id = item.id }, new { style = "text-decoration: none;color:black;" })
                    </span>
                </td>


            </tr>
        }

    </table>
</body>
</html>